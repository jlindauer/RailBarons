<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="horizontal" >

    <ScrollView
        android:id="@+id/trains"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp" >

            <TableLayout
                android:id="@+id/trainTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </TableLayout>
            
        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/cars"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="5dp" >

            <TableLayout
                android:id="@+id/carTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </TableLayout>
            
               <ImageButton
			     android:onClick="plusButton"
			     android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:background="#00000000"
                 android:layout_gravity="center"
                 android:scaleType="fitCenter"
			     android:layout_alignParentRight="true"
			     android:layout_alignParentBottom="true"
			     android:src="@drawable/xml_plusbutton" />
			     
        </LinearLayout>
                    
    </ScrollView>
    <ScrollView
        android:id="@+id/availableCars"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp" >

            <TableLayout
                android:id="@+id/availableCarTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </TableLayout>
            
        </LinearLayout>
    </ScrollView>
    
    <ImageButton
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:background="#00000000"
     android:onClick="backButton"
     android:scaleType="fitCenter"
     android:layout_alignParentRight="true"
     android:layout_alignParentBottom="true"
     android:src="@drawable/xml_xbutton" />

</RelativeLayout>